<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <title>Electronics page</title>
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="stylesheet" href="/font-awesome.min.css">
    <link rel="stylesheet" href="/normalize.css">
    <link rel="stylesheet" href="/style.css">
</head>

<head>

    <body>
        <header>
            <nav>

                <ul>
                    <li>
                        <a class="link" href="/women">Womens Collection</a>
                    </li>
                    <li>
                        <a class="link" href="/men">Mens Collection</a>
                    </li>
                    <li>
                        <a class="link" href="/jewelery">Jewelery Collection </a>
                    </li>
                    <li>
                        <a class="link" href="/electronics">Electronics Collection</a>
                    </li>
                    <li>
                        <a class="link" href="/inventory">Home</a>
                    </li>
                </ul>
            </nav>
        </header>



        <section class="mainContainer">
            <section class="itemCol">
                <ul class="mensSection">
                    <% for(var i=0; i<inventory.length; i++) {%>

                        <% if(inventory[i].category === "electronics") {%>

                            <section class="itemBox">
                                <li class="message">
                                    <span>
                                        <%= inventory[i].title %>
                                    </span>
                                    <span>
                                        <%= inventory[i].description %>
                                    </span>
                                    <img src="<%= inventory[i].image %>" alt="<%= inventory[i].title %>">
                                    <span>
                                        <i class="fa fa-cart-plus fa-2x" aria-hidden="true"></i>
                                    </span>



                                </li>
                            </section>
                            <% } %>
                                <% } %>
                </ul>
            </section>
            <section class="col">
                <h3>MiniCart</h3>
                <ul class="miniCart">
                    <a href="/cart">Go to cart!</a>
                    <% for(var i=0; i< miniCart.length; i++) {%>



                        <li class="mini">
                            <span id="storeItem" name="storeItemName">
                                <%= miniCart[i].item %>
                            </span>
                            <span>
                                <%= miniCart[i].description %>
                            </span>
                            <img src="<%= miniCart[i].image %>" alt="<%= miniCart[i].title %>">
                            <span class="hidden" id="storeItemId" name="storeItemIdVal">
                                <%= miniCart[i].id %>
                            </span>
                            <span>
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </span>

                            <span>

                            </span>



                        </li>

                        <% } %>
                </ul>
            </section>
        </section>


        <script src="main.js"></script>
    </body>

</html>