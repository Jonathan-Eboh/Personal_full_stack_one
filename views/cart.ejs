<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <title>Cart page</title>
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>

<head>

    <body>
        <header>
            <nav>

                <ul>
                    <li>
                        <a class="link" href="/inventory">Back to shopping!</a>
                    </li>


                </ul>
            </nav>
        </header>



        <section class="cartContain">
            <ul class="cartSection">
                <h3>Items ready for purchase</h3>
                <% for(var i=0; i<cart.length; i++) {%>

                    <% if(cart[i].paid === false) {%>

                        <li class="cartLi  <%= cart[i].priority %>">
                            <span id="storeItem" name="storeItemName">
                                <%= cart[i].item %>
                            </span>
                            <span>
                                <%= cart[i].description %>
                            </span>
                            <img src="<%= cart[i].image %>" alt="<%= cart[i].title %>">
                            <span class="hidden" id="storeItemId" name="storeItemIdVal">
                                <%= cart[i].id %>
                            </span>
                            <span>
                                <i class="fa fa-trash fa-2x" aria-hidden="true"></i>
                            </span>

                            <span>
                                <i class="fa fa-cart-plus fa-2x" aria-hidden="true"></i>
                            </span>

                            <span>
                                <i class="fa fa-money fa-2x" aria-hidden="true"></i>
                            </span>
                        </li>
                        <% } %>
                            <% } %>
            </ul>


            <ul class="cartSection">
                <h3>Purchased Items</h3>
                <% for(var i=0; i<cart.length; i++) {%>

                    <% if(cart[i].paid === true) {%>

                        <li class="cartLi <%= cart[i].priority %>">
                            <span id="storeItem" name="storeItemName">
                                <%= cart[i].item %>
                            </span>
                            <span>
                                <%= cart[i].description %>
                            </span>
                            <img src="<%= cart[i].image %>" alt="<%= cart[i].title %>">
                            <span class="hidden" id="storeItemId" name="storeItemIdVal">
                                <%= cart[i].id %>
                            </span>


                        </li>
                        <% } %>
                            <% } %>
            </ul>

            <section>


                <% if(cart.find(item => item.paid === false)) {%>
                    <span class="cartSpan">Please pay for all your items!</span>
                    <%} else { %>
                        <span>
                            <a class="link" href="/checkout">Check out!</a>
                        </span>
                        <% } %>

            </section>
        </section>

        <script src="main.js"></script>
    </body>

</html>