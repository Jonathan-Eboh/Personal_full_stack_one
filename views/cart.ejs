<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <title>Cart page</title>
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>

<head>

    <body>
        <header>
            <nav>

                <ul>
                    <li>
                        <a href="/inventory">Back to shopping!</a>
                    </li>
                    <li>
                        <a href="/checkout">Pay and check out!</a>
                    </li>

                </ul>
            </nav>
        </header>



        <ul class="cartSection">
            <h3>Items ready for purchase</h3>
            <% for(var i=0; i<cart.length; i++) {%>

                <% if(cart[i].paid === false) {%>

                    <li class="message <%= cart[i].priority %>">
                        <span id="storeItem" name="storeItemName">
                            <%= cart[i].item %>
                        </span>
                        <span>
                            <%= cart[i].description %>
                        </span>
                        <img src="<%= cart[i].image %>" alt="<%= cart[i].title %>">
                        <span class="hidden" id="storeItemId" name="storeItemIdVal">
                            <%= cart[i].id %>
                        </span>
                        <span>
                            <i class="fa fa-trash fa-2x" aria-hidden="true"></i>
                        </span>

                        <span>
                            <i class="fa fa-cart-plus fa-2x" aria-hidden="true"></i>
                        </span>

                        <span>
                            <i class="fa fa-money fa-2x" aria-hidden="true"></i>
                        </span>
                    </li>
                    <% } %>
                        <% } %>
        </ul>


        <ul class="cartSection">
            <h3>Purchased Items</h3>
            <% for(var i=0; i<cart.length; i++) {%>

                <% if(cart[i].paid === true) {%>

                    <li class="message <%= cart[i].priority %>">
                        <span id="storeItem" name="storeItemName">
                            <%= cart[i].item %>
                        </span>
                        <span>
                            <%= cart[i].description %>
                        </span>
                        <img src="<%= cart[i].image %>" alt="<%= cart[i].title %>">
                        <span class="hidden" id="storeItemId" name="storeItemIdVal">
                            <%= cart[i].id %>
                        </span>


                    </li>
                    <% } %>
                        <% } %>
        </ul>

        <section>


            <% if(cart.find(item => item.paid === false)) {%>
                <p> Please pay for your items!</p>
                <%} else { %>
                    <a href="/checkout">Check out!</a>
                    <% } %>

        </section>

        <script src="main.js"></script>
    </body>

</html>