<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <title>Inventory page</title>
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>

<body>


    <header>
        <nav>

            <ul>
                <li>
                    <a href="/women">Womens Collection</a>
                </li>
                <li>
                    <a href="/men">Mens Collection</a>
                </li>
                <li>
                    <a href="/jewelery">Jewelery Collection </a>
                </li>
                <li>
                    <a href="/electronics">Electronics Collection</a>
                </li>
            </ul>
        </nav>
    </header>
    <h1>Featured Items!</h1>


    <section class="paymentSection">
        <form action="/setPayment" method="POST">


            <select name="setPayment" id="paymentSelect">
                <option value="">--Set Payment Option--</option>
                <option value="high">Bank of America</option>
                <option value="low">Capital One</option>
                <option value="mid">Chase</option>
                <option value="mid">Discover</option>
            </select>
            <button type="submit">Choose Payment Method</button>
        </form>
    </section>

    <section class="updatePaymentSection">
        <form action="/updatePayment" method="PUT">


            <select name="updatedPayment" id="updatePaymentSelect">
                <option value="">--Update Payment Option--</option>
                <option value="high">Bank of America</option>
                <option value="low">Capital One</option>
                <option value="mid">Chase</option>
                <option value="mid">Discover</option>
            </select>
            <button type="submit">Update Payment Method</button>
        </form>
    </section>

    <ul class="general-category">
        <% for(var i=0; i<inventory.length; i++) {%>

            <% if(inventory[i].category !== "men's clothing" && inventory[i].category !== "women's clothing" ) {%>

                <li class="message <%= inventory[i].title %>">
                    <span>
                        <%= inventory[i].title %>
                    </span>
                    <span>
                        :::
                        <a href="/<%= inventory[i].category %>">Shop this collection!</a>
                    </span>
                    <img src="<%= inventory[i].image %>" alt="<%= inventory[i].title %>">
                </li>
                <% } %>
                    <% } %>
    </ul>

    <section class="featuedSection">

    </section>
    <script src="main.js"></script>
</body>

</html>